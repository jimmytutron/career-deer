{
  "name": "career-deer",
  "version": "1.0.0",
  "description": "Job Task Tracker",
  "main": "./backend/server",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node ./backend/server",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && yarn install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "chart.js": "^2.7.2",
    "cheerio": "^1.0.0-rc.2",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "if-env": "^1.0.4",
    "material-ui": "^0.20.1",
    "moment": "^2.22.2",
    "mongoose": "^5.1.6",
    "morgan": "^1.9.0",
    "morgan-body": "^2.4.0",
    "node-schedule": "^1.3.0",
    "nodemailer": "^4.6.7",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "react-beautiful-dnd": "^8.0.2",
    "react-chartjs-2": "^2.7.2",
    "react-redux": "^5.0.7",
    "react-render-html": "^0.6.0",
    "react-reveal": "^1.2.2",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-form-material-ui": "^4.3.4",
    "redux-thunk": "^2.3.0"
  }
}
